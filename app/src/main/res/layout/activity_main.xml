<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <Button
                android:id="@+id/allonsy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="myClick"
                android:text="Hadi Gidelim/Lets Go" />

            <Button
                android:id="@+id/bonjour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="myClick"
                android:text="Günaydın/Good Morning" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <Button
                android:id="@+id/aplustard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="myClick"
                android:text="Sonra Görüşürüz" />

            <Button
                android:id="@+id/bonnenuit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="myClick"
                android:text="İyi Geceler" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <Button
                android:id="@+id/bonsoir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="myClick"
                android:text="İyi akşamlar" />

            <Button
                android:id="@+id/salut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="myClick"
                android:text="Güle Güle" />
        </TableRow>


    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>